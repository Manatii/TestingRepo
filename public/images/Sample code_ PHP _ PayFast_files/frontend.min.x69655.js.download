function escapeHTML(str){str=str+"";var out="";for(var i=0;i<str.length;i++){if(str[i]==="<"){out+="&lt;"}else if(str[i]===">"){out+="&gt;"}else if(str[i]==="'"){out+="&#39;"}else if(str[i]==='"'){out+="&quot;"}else{out+=str[i]}}return out}jQuery(document).ready(function(e){var cart_tag=window.location.hash;cart_tag=cart_tag.replace("#","");cart_tag=escapeHTML(cart_tag);if(cart_tag&&"all"!=cart_tag){jQuery(".cart-tag-filter").removeClass("selected");jQuery(".cart-tag-filter a[rel="+cart_tag+"]").parent(".cart-tag-filter").addClass("selected");jQuery(".cart-tag-single").addClass("hide");jQuery(".cart-tag-single."+cart_tag).removeClass("hide")}jQuery(".cart-tag-filter a").click(function(){var selected_tag=jQuery(this).attr("rel");jQuery(".cart-tag-filter").removeClass("selected");jQuery(this).parent(".cart-tag-filter").addClass("selected");if("all"==selected_tag){jQuery(".cart-tag-single").removeClass("hide")}else{jQuery(".cart-tag-single").addClass("hide");jQuery(".cart-tag-single."+selected_tag).removeClass("hide")}});if(jQuery("#report-issue").length){jQuery(".open-form").click(function(){jQuery("#report-form").slideToggle("fast")})}});